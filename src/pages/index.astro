---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostCard from '@components/PostCard.astro';
import { getAllPosts } from '@/utils/post';
import { SITE_CONFIG } from '@/config';

const posts = await getAllPosts();
const recentPosts = posts.slice(0, SITE_CONFIG.postsPerPage);
---

<BaseLayout title={SITE_CONFIG.title} description={SITE_CONFIG.description}>
  <div class="container">
    <section class="hero">
      <h1 class="hero-title">欢迎阅读</h1>
      <p class="hero-description">
        这里记录了我的技术探索、学习笔记和旅行见闻。
        <br>
        请从左侧选择文章，或通过上方导航切换分类。
      </p>
    </section>
    
    <section class="posts">
      <h2 class="section-title">最新更新</h2>
      <div class="posts-list">
        {recentPosts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    padding: var(--spacing-xl) 0;
    margin-bottom: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
  }
  
  .hero-title {
    font-family: var(--font-heading);
    font-size: 3.5rem; /* 更大的标题 */
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
    letter-spacing: -0.03em;
  }
  
  .hero-description {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    font-style: italic; /* 更有格调 */
    line-height: 1.4;
  }
  
  .section-title {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-lg);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-secondary);
  }
  
  .posts-list {
    display: flex;
    flex-direction: column;
  }
  
  .view-all {
    margin-top: var(--spacing-lg);
  }
  
  .btn-link {
    display: inline-block;
    color: var(--color-text);
    font-weight: 600;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s ease;
    font-family: var(--font-mono);
    font-size: 0.9rem;
  }
  
  .btn-link:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-description {
      font-size: 1.25rem;
    }
  }
</style>

