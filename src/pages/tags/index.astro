---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getAllTags } from '@/utils/post';
import { SITE_CONFIG } from '@/config';

const tags = await getAllTags();
---

<BaseLayout
  title={`标签 - ${SITE_CONFIG.title}`}
  description="按标签浏览文章"
>
  <div class="container">
    <header class="tags-header">
      <h1 class="tags-title">标签</h1>
      <p class="tags-description">共 {tags.length} 个标签</p>
    </header>
    
    <div class="tags-cloud">
      {tags.map(({ tag, count }) => (
        <a 
          href={`/tags/${tag}`} 
          class="tag-item"
          style={`font-size: ${Math.min(1 + count * 0.2, 2)}rem;`}
        >
          #{tag}
          <span class="tag-count">({count})</span>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .tags-header {
    text-align: center;
    padding: var(--spacing-xl) 0;
    margin-bottom: var(--spacing-xl);
  }
  
  .tags-title {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }
  
  .tags-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
  }
  
  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-md);
    padding: var(--spacing-xl);
  }
  
  .tag-item {
    color: var(--color-primary);
    font-weight: 500;
    transition: all 0.2s ease;
    line-height: 1;
  }
  
  .tag-item:hover {
    transform: scale(1.1);
    color: var(--color-primary-hover);
  }
  
  .tag-count {
    font-size: 0.75em;
    color: var(--color-text-secondary);
    margin-left: 0.25em;
  }
  
  @media (max-width: 768px) {
    .tags-title {
      font-size: 2rem;
    }
    
    .tags-cloud {
      padding: var(--spacing-md);
    }
  }
</style>

