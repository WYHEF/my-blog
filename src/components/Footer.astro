---
import { SITE_CONFIG } from '@/config';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-info">
        <p class="copyright">
          © {currentYear} {SITE_CONFIG.author}. All rights reserved.
        </p>
        <p class="description">
          {SITE_CONFIG.description}
        </p>
      </div>
      
      <div class="footer-links">
        <a href={SITE_CONFIG.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <a href={`mailto:${SITE_CONFIG.email}`} aria-label="Email">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </a>
        <a href="/rss.xml" aria-label="RSS">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: transparent; /* 移除背景色 */
    border-top: 1px solid var(--color-border);
    margin-top: auto;
    padding: var(--spacing-xl) var(--spacing-lg);
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-lg);
    max-width: 1200px;
  }
  
  .footer-info {
    flex: 1;
  }
  
  .copyright {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xs);
    font-family: var(--font-mono);
  }
  
  .description {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin: 0;
    opacity: 0.8;
  }
  
  .footer-links {
    display: flex;
    gap: var(--spacing-md);
  }
  
  .footer-links a {
    color: var(--color-text-secondary);
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    border-bottom: none;
  }
  
  .footer-links a:hover {
    color: var(--color-primary);
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: var(--spacing-lg) var(--spacing-md);
    }
    
    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

