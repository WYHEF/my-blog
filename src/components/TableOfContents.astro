---
interface Heading {
  depth: number;
  text: string;
  slug: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;
---

{headings.length > 0 && (
  <nav class="toc">
    <h3 class="toc-title">ON THIS PAGE</h3>
    <ul class="toc-list">
      {headings.map((heading) => (
        <li class={`toc-item toc-level-${heading.depth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    /* 移除背景色和边框，更极简 */
    padding: var(--spacing-sm) 0;
  }
  
  .toc-title {
    font-size: 0.75rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding-left: 0.75rem;
  }
  
  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
    border-left: 1px solid var(--color-border);
  }
  
  .toc-item {
    margin: 0;
  }
  
  .toc-item a {
    display: block;
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    line-height: 1.6;
    padding: 0.3rem 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
    border-left: 2px solid transparent;
    margin-left: -1px; /* Overlap border */
  }
  
  .toc-item a:hover {
    color: var(--color-primary);
    text-decoration: none;
  }
  
  .toc-level-2 a {
    padding-left: 0.75rem;
  }
  
  .toc-level-3 a {
    padding-left: 1.5rem;
  }
  
  .toc-level-4 a {
    padding-left: 2.25rem;
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        const id = entry.target.getAttribute('id');
        const tocLink = document.querySelector(`.toc-list a[href="#${id}"]`);
        
        if (entry.isIntersecting) {
          document.querySelectorAll('.toc-list a').forEach((link) => {
            link.classList.remove('active');
          });
          tocLink?.classList.add('active');
        }
      });
    },
    { rootMargin: '-10% 0px -80% 0px' }
  );
  
  document.querySelectorAll('article h2, article h3, article h4').forEach((heading) => {
    observer.observe(heading);
  });
</script>

<style is:global>
  .toc-list a.active {
    color: var(--color-primary);
    font-weight: 600;
    border-left-color: var(--color-primary);
    background-color: var(--color-bg-secondary);
  }
</style>
